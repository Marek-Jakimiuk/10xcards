---
import Layout from "../layouts/Layout.astro";
import { FlashcardsView } from "../components/FlashcardsView";
import { viewTransitionsConfig } from "../config/view-transitions.config";

// Get user from supabase session
const { supabase } = Astro.locals;
const {
  data: { user },
} = await supabase.auth.getUser();

// Redirect if not authenticated
if (!user) {
  return Astro.redirect("/login");
}

// Disable prerendering as this view depends on user session
export const prerender = false;
---

<Layout title="Moje Fiszki">
  <div style={viewTransitionsConfig.pageTransitions.flashcardsPage ? "view-transition-name: flashcards-page;" : ""}>
    <main class="container mx-auto px-4 py-8">
      <FlashcardsView client:load userId={user.id} />
    </main>
  </div>
</Layout>
